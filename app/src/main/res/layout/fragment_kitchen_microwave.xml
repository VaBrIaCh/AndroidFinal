<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_kitchen_microwave"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    android:focusable="true"
    tools:context="com.example.yah.androidfinal.KitchenLights">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageButton
            android:contentDescription="@string/backButton"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/button_left_arrow"
            android:background="@drawable/leftarrow"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="10pt"
            android:text="@string/text_kitchen_microwave"
            android:id="@+id/text_kitchen_lights"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />


        <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_kitchen_lights"
            android:layout_alignParentStart="true"
            android:layout_marginTop="124dp"
            android:id="@+id/bm1" />

        <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bm1"
            android:layout_toEndOf="@+id/bm1"
            android:layout_marginStart="18dp"
            android:id="@+id/bm2" />

        <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bm2"
            android:layout_toEndOf="@+id/bm2"
            android:layout_marginStart="18dp"
            android:id="@+id/bm3" />

        <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bm3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp"
            android:id="@+id/bm4" />

        <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bm4"
            android:layout_alignStart="@+id/bm2"
            android:id="@+id/bm5" />

        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bm5"
            android:layout_alignStart="@+id/bm3"
            android:id="@+id/bm6" />

        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bm4"
            android:layout_alignEnd="@+id/bm4"
            android:layout_marginTop="19dp"
            android:id="@+id/bm7" />

        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bm7"
            android:layout_alignStart="@+id/bm5"
            android:id="@+id/bm8" />

        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bm8"
            android:layout_alignStart="@+id/bm6"
            android:id="@+id/bm9" />

        <Button
            android:text="End"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bm7"
            android:layout_alignEnd="@+id/bm7"
            android:layout_marginTop="13dp"
            android:id="@+id/bmE" />

        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bm0"
            android:layout_alignBaseline="@+id/bmE"
            android:layout_alignBottom="@+id/bmE"
            android:layout_alignStart="@+id/bm8" />

        <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmS"
            android:layout_alignBaseline="@+id/bm0"
            android:layout_alignBottom="@+id/bm0"
            android:layout_alignStart="@+id/bm9" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15pt"
            android:layout_below="@+id/text_kitchen_lights"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/kitchen_microwave_timer" />



    </RelativeLayout>
</FrameLayout>
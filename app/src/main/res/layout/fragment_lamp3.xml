<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yah.androidfinal.OnOffLamp"
    android:textAlignment="center"
    android:background="@android:color/black"
    android:id="@+id/fraglamp3"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lamp3"
            android:text="Lamp 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/seekText2"
            android:layout_above="@+id/seekBar3"
            />

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar3"
            android:layout_marginBottom="184dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            android:id="@+id/view3"
            android:layout_above="@+id/seekBar3"
            android:layout_alignStart="@+id/seekBar3" />

        <Button
            android:layout_above="@+id/seekText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/colorChange" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="34dp"
            android:rowCount="2"
            android:columnCount="4"
            android:layout_below="@+id/seekText2"
android:layout_centerHorizontal="true"

            >

            <Button
                android:id="@+id/color1"
/>
            <Button
                android:id="@+id/color2"
/>
            <Button
                android:id="@+id/color3"/>
            <Button
                android:id="@+id/color4"
/>
            <Button
                android:id="@+id/color5"
/>
            <Button
                android:id="@+id/color6"
/>
            <Button
                android:id="@+id/color7"
/>
            <Button
                android:id="@+id/color8"
/>



        </GridLayout>


    </RelativeLayout>
</FrameLayout>

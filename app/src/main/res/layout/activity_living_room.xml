<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_living_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    tools:context="com.example.yah.androidfinal.LivingRoomActivity">



    <ListView
        android:id="@+id/livingListview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/add"
        android:layout_alignBottom="@+id/livingListview"
        android:layout_toLeftOf="@+id/remove"

        android:onClick="ChangeFragment" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/messageFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yah.androidlabs.MessageDetails"
        android:layout_below="@+id/livingListview"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        >

    </FrameLayout>

    <Button
        android:text="Remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remove"

        android:layout_alignBaseline="@+id/add"
        android:layout_alignBottom="@+id/add"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
